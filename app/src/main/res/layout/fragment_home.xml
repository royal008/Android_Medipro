<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_upload_prescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingBottom="15dp"
            android:paddingTop="15dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:contentDescription="@string/specify"
                android:layout_marginLeft="@dimen/smaller_text"
                android:layout_marginStart="@dimen/smaller_text"
                android:src="@drawable/general_uploadprescription" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/very_small_text"
                android:layout_marginStart="@dimen/very_small_text"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:text="@string/order_with_pres"
                    android:textColor="@color/red"
                    android:textSize="@dimen/medium_text"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:text="@string/quick_buy"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/smaller_text"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/very_small_text"
                android:layout_marginEnd="@dimen/very_small_text"
                android:background="@drawable/blue_curved_rectangle"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="@string/shopping_upload"
                android:textColor="@color/white"
                android:textSize="@dimen/small_text"
                android:textStyle="bold" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="@dimen/small_text">

            <android.support.v4.view.ViewPager
                android:id="@+id/pager"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/small_text"
                android:layout_marginRight="@dimen/small_text" />


            <com.viewpagerindicator.CirclePageIndicator
                android:id="@+id/indicator"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:gravity="bottom"
                android:padding="10dip"
                app:centered="true"
                app:fillColor="#df0623"
                app:pageColor="#fff"
                app:snap="false" />

        </RelativeLayout>


        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/small_text"
            android:layout_marginStart="@dimen/small_text"
            android:layout_marginTop="@dimen/small_text"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/ll_menu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_ayush"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/iv_ayush"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/margin"
                        android:layout_marginRight="@dimen/margin"
                        android:contentDescription="@string/ayush"
                        android:layout_marginTop="@dimen/margin"
                        android:background="@color/white"
                        android:paddingLeft="@dimen/medium_text"
                        android:paddingRight="@dimen/medium_text"
                        android:paddingTop="@dimen/very_small_text"
                        android:src="@drawable/ayush" />

                    <TextView
                        android:id="@+id/tv_ayush"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/margin_bottom"
                        android:layout_marginLeft="@dimen/margin"
                        android:layout_marginRight="@dimen/margin"
                        android:background="@color/white"
                        android:gravity="center"
                        android:paddingBottom="@dimen/padding_bottom"
                        android:text="@string/ayush"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/smaller_text" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_pet_clinic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/very_small_text"
                    android:layout_marginStart="@dimen/very_small_text"
                    android:gravity="center"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/iv_pet_clinic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/margin"
                        android:contentDescription="@string/pet_clinic"
                        android:layout_marginRight="@dimen/margin"
                        android:layout_marginTop="@dimen/margin"
                        android:background="@color/white"
                        android:paddingLeft="@dimen/medium_text"
                        android:paddingRight="@dimen/medium_text"
                        android:paddingTop="@dimen/very_small_text"
                        android:src="@drawable/book_test" />

                    <TextView
                        android:id="@+id/tv_pet_clinic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/margin_bottom"
                        android:layout_marginLeft="@dimen/margin"
                        android:layout_marginRight="@dimen/margin"
                        android:background="@color/white"
                        android:gravity="center"
                        android:paddingBottom="@dimen/padding_bottom"
                        android:text="@string/pet_clinic"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/smaller_text" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_health_center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/very_small_text"
                    android:layout_marginStart="@dimen/very_small_text"
                    android:gravity="center"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/iv_health_center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/margin"
                        android:contentDescription="@string/health_center"
                        android:layout_marginRight="@dimen/margin"
                        android:layout_marginTop="@dimen/margin"
                        android:background="@color/white"
                        android:paddingLeft="@dimen/medium_text"
                        android:paddingRight="@dimen/medium_text"
                        android:paddingTop="@dimen/very_small_text"
                        android:src="@drawable/health_centers" />

                    <TextView
                        android:id="@+id/tv_health_center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/margin_bottom"
                        android:layout_marginLeft="@dimen/margin"
                        android:layout_marginRight="@dimen/margin"
                        android:background="@color/white"
                        android:gravity="center"
                        android:paddingBottom="@dimen/padding_bottom"
                        android:text="@string/health_center"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/smaller_text" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_health_bank"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/very_small_text"
                    android:layout_marginStart="@dimen/very_small_text"
                    android:gravity="center"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/iv_health_bank"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/margin"
                        android:layout_marginRight="@dimen/margin"
                        android:layout_marginTop="@dimen/margin"
                        android:contentDescription="@string/health_bank"
                        android:background="@color/white"
                        android:paddingLeft="@dimen/medium_text"
                        android:paddingRight="@dimen/medium_text"
                        android:paddingTop="@dimen/very_small_text"
                        android:src="@drawable/health_bank" />

                    <TextView
                        android:id="@+id/ayush"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/margin_bottom"
                        android:layout_marginLeft="@dimen/margin"
                        android:layout_marginRight="@dimen/margin"
                        android:background="@color/white"
                        android:gravity="center"
                        android:paddingBottom="@dimen/padding_bottom"
                        android:text="@string/health_bank"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/smaller_text" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_insurance"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/very_small_text"
                    android:layout_marginStart="@dimen/very_small_text"
                    android:gravity="center"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/iv_insurance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/margin"
                        android:layout_marginRight="@dimen/margin"
                        android:contentDescription="@string/insurance"
                        android:layout_marginTop="@dimen/margin"
                        android:background="@color/white"
                        android:paddingLeft="@dimen/medium_text"
                        android:paddingRight="@dimen/medium_text"
                        android:paddingTop="@dimen/very_small_text"
                        android:src="@drawable/insurance" />

                    <TextView
                        android:id="@+id/tv_insurance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/margin_bottom"
                        android:layout_marginLeft="@dimen/margin"
                        android:layout_marginRight="@dimen/margin"
                        android:background="@color/white"
                        android:gravity="center"
                        android:paddingBottom="@dimen/padding_bottom"
                        android:text="@string/insurance"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/smaller_text" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_order_medicines"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/very_small_text"
                    android:layout_marginStart="@dimen/very_small_text"
                    android:gravity="center"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/iv_order_medicines"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/margin"
                        android:layout_marginRight="@dimen/margin"
                        android:layout_marginTop="@dimen/margin"
                        android:background="@color/white"
                        android:paddingLeft="@dimen/medium_text"
                        android:paddingRight="@dimen/medium_text"
                        android:contentDescription="@string/order_medicines"
                        android:paddingTop="@dimen/very_small_text"
                        android:src="@drawable/order_medicines" />

                    <TextView
                        android:id="@+id/tv_order_medicines"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/margin_bottom"
                        android:layout_marginLeft="@dimen/margin"
                        android:layout_marginRight="@dimen/margin"
                        android:background="@color/white"
                        android:gravity="center"
                        android:paddingBottom="@dimen/padding_bottom"
                        android:text="@string/order_medicines"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/smaller_text" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_book_test"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/very_small_text"
                    android:layout_marginStart="@dimen/very_small_text"
                    android:gravity="center"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/iv_book_test"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/margin"
                        android:layout_marginRight="@dimen/margin"
                        android:layout_marginTop="@dimen/margin"
                        android:background="@color/white"
                        android:paddingLeft="@dimen/medium_text"
                        android:paddingRight="@dimen/medium_text"
                        android:contentDescription="@string/book_test"
                        android:paddingTop="@dimen/very_small_text"
                        android:src="@drawable/book_test" />

                    <TextView
                        android:id="@+id/tv_book_test"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/margin_bottom"
                        android:layout_marginLeft="@dimen/margin"
                        android:layout_marginRight="@dimen/margin"
                        android:background="@color/white"
                        android:gravity="center"
                        android:paddingBottom="@dimen/padding_bottom"
                        android:text="@string/book_test"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/smaller_text" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_shopping"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/very_small_text"
                    android:layout_marginStart="@dimen/very_small_text"
                    android:gravity="center"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/iv_shopping"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/margin"
                        android:layout_marginRight="@dimen/margin"
                        android:layout_marginTop="@dimen/margin"
                        android:background="@color/white"
                        android:paddingLeft="@dimen/medium_text"
                        android:paddingRight="@dimen/medium_text"
                        android:contentDescription="@string/shopping"
                        android:paddingTop="@dimen/very_small_text"
                        android:src="@drawable/shopping" />

                    <TextView
                        android:id="@+id/tv_shopping"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/margin_bottom"
                        android:layout_marginLeft="@dimen/margin"
                        android:layout_marginRight="@dimen/margin"
                        android:background="@color/white"
                        android:gravity="center"
                        android:paddingBottom="@dimen/padding_bottom"
                        android:text="@string/shopping"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/smaller_text" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_ask_me_anything"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/very_small_text"
                    android:layout_marginStart="@dimen/very_small_text"
                    android:gravity="center"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/iv_ask_me_anything"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/margin"
                        android:layout_marginRight="@dimen/margin"
                        android:layout_marginTop="@dimen/margin"
                        android:background="@color/white"
                        android:paddingLeft="@dimen/medium_text"
                        android:paddingRight="@dimen/medium_text"
                        android:paddingTop="@dimen/very_small_text"
                        android:contentDescription="@string/health_bank"
                        android:src="@drawable/health_bank" />

                    <TextView
                        android:id="@+id/tv_ask_me_anything"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/margin_bottom"
                        android:layout_marginLeft="@dimen/margin"
                        android:layout_marginRight="@dimen/margin"
                        android:background="@color/white"
                        android:gravity="center"
                        android:paddingBottom="@dimen/padding_bottom"
                        android:text="@string/ask_me"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/smaller_text" />

                </LinearLayout>

            </LinearLayout>
        </HorizontalScrollView>


        <LinearLayout
            android:id="@+id/ll_book_appointment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/small_text"
            android:layout_marginRight="@dimen/small_text"
            android:layout_marginTop="@dimen/small_text"
            android:background="@color/upload_background_color"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_book_appointment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/large_text"
                android:contentDescription="@string/book"
                android:src="@drawable/general_bookappontment" />

            <TextView
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/small_text"
                    android:layout_marginStart="@dimen/small_text"
                    android:text="@string/book_an_appointment"
                    android:textColor="@color/white"
                    android:textSize="@dimen/medium_text"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/small_text"
                    android:layout_marginStart="@dimen/small_text"
                    android:layout_marginTop="3dp"
                    android:text="@string/find"
                    android:textColor="@color/white"
                    android:textSize="@dimen/smaller_text" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/small_text"
            android:layout_marginRight="@dimen/small_text"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/popular_products"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/medium_text"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_view_all_product"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:gravity="end"
                android:paddingBottom="@dimen/mini_text"
                android:paddingTop="@dimen/mini_text"
                android:text="@string/view_all"
                android:textColor="@color/red"
                android:textSize="@dimen/medium_text" />
        </LinearLayout>

        <com.android.medipro.custom_utils.ExpandableGridView
            android:id="@+id/gv_popular_products"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/small_text"
            android:layout_marginLeft="@dimen/small_text"
            android:layout_marginRight="@dimen/small_text"
            android:numColumns="4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">

            <com.google.android.gms.ads.AdView
                android:id="@+id/adView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                ads:adSize="BANNER"
                ads:adUnitId="@string/banner_home_footer" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>