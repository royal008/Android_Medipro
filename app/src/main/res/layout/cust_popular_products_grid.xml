<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_popular_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"
        android:contentDescription="@string/product_name"
        android:background="@color/white"
        android:paddingLeft="@dimen/medium_text"
        android:paddingRight="@dimen/medium_text"
        android:paddingTop="@dimen/very_small_text"
        android:src="@drawable/documents" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/tv_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="start"
            android:text="@string/product_name"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/very_small_text"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="start"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_previous_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/horizontal_line"
                android:text="@string/amount"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/mini_text" />

            <TextView
                android:id="@+id/tv_offer_percentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/marginSizeUltraSmall"
                android:layout_marginStart="@dimen/marginSizeUltraSmall"
                android:text="@string/offer"
                android:textColor="@color/pink"
                android:textSize="@dimen/mini_text" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_current_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginSizeUltraSmall"
            android:gravity="start"
            android:text="@string/amt"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/very_small_text"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>