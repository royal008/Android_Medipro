<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:background="@color/red"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/very_small_text"
            android:src="@drawable/left_arrow" />

        <TextView
            android:id="@+id/tv_place_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/very_small_text"
            android:gravity="center"
            android:text="Doctor Details"
            android:textColor="@color/white"
            android:textSize="@dimen/large_text"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="right"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/mini_text"
                android:src="@drawable/star" />

            <ImageView
                android:id="@+id/iv_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/mini_text"
                android:src="@drawable/share" />

            <ImageView
                android:id="@+id/iv_three_dots"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/mini_text"
                android:src="@drawable/small_ellipsis_white" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@drawable/doctordetails"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/small_text"
            android:src="@drawable/doctor_list" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/small_text"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dr.Name"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/small_text"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cardiologist"
                android:textColor="@color/gray"
                android:textSize="@dimen/small_text"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="1dp"
                    android:layout_weight="2"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:padding="@dimen/mini_text">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/smaller_text"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10 Yrs"
                            android:textColor="@color/dark_gray"
                            android:textSize="@dimen/smaller_text"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Experience"
                            android:textColor="@color/dark_gray"
                            android:textSize="@dimen/smaller_text" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="INR 600"
                            android:textColor="@color/dark_gray"
                            android:textSize="@dimen/smaller_text"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Consultation Fees"
                            android:textColor="@color/dark_gray"
                            android:textSize="@dimen/smaller_text" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="@dimen/smaller_text"
                    android:layout_marginRight="@dimen/smaller_text"
                    android:layout_marginTop="@dimen/smaller_text"
                    android:layout_weight="10"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:padding="@dimen/mini_text">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hospital Name"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/small_text"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="Address line 1"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/smaller_text" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:text="Address line 2"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/smaller_text" />

                    <com.google.android.gms.maps.MapView
                        android:id="@+id/map"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="@dimen/smaller_text" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="@dimen/smaller_text"
                    android:layout_marginRight="@dimen/smaller_text"
                    android:layout_marginTop="@dimen/very_small_text"
                    android:layout_weight="3"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:padding="@dimen/mini_text">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="Visiting Timing"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/small_text"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="7"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:layout_weight="0.2"
                                android:text="MON "
                                android:textColor="@color/gray"
                                android:textSize="@dimen/smaller_text" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:layout_weight="0.8"
                                android:text="06:30 am - 07.30 am"
                                android:textColor="@color/gray"
                                android:textSize="@dimen/smaller_text" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:layout_weight="0.2"
                                android:text="TUE "
                                android:textColor="@color/gray"
                                android:textSize="@dimen/smaller_text" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:layout_weight="0.8"
                                android:text="06:30 am - 07.30 am"
                                android:textColor="@color/gray"
                                android:textSize="@dimen/smaller_text" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:layout_weight="0.2"
                                android:text="WED"
                                android:textColor="@color/gray"
                                android:textSize="@dimen/smaller_text" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:layout_weight="0.8"
                                android:text="06:30 am - 07.30 am"
                                android:textColor="@color/gray"
                                android:textSize="@dimen/smaller_text" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:layout_weight="0.2"
                                android:text="THR"
                                android:textColor="@color/gray"
                                android:textSize="@dimen/smaller_text" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:layout_weight="0.8"
                                android:text="06:30 am - 07.30 am"
                                android:textColor="@color/gray"
                                android:textSize="@dimen/smaller_text" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:layout_weight="0.2"
                                android:text="FRI"
                                android:textColor="@color/gray"
                                android:textSize="@dimen/smaller_text" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:layout_weight="0.8"
                                android:text="06:30 am - 07.30 am"
                                android:textColor="@color/gray"
                                android:textSize="@dimen/smaller_text" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:layout_weight="0.2"
                                android:text="SAT"
                                android:textColor="@color/gray"
                                android:textSize="@dimen/smaller_text" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:layout_weight="0.8"
                                android:text="06:30 am - 07.30 am"
                                android:textColor="@color/gray"
                                android:textSize="@dimen/smaller_text" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:layout_weight="0.2"
                                android:text="SUN"
                                android:textColor="@color/gray"
                                android:textSize="@dimen/smaller_text" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:layout_weight="0.8"
                                android:text="06:30 am - 07.30 am"
                                android:textColor="@color/gray"
                                android:textSize="@dimen/smaller_text" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8">

        <TextView
            android:id="@+id/tv_call_doctor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/upload_background_color"
            android:gravity="center"
            android:text="BOOK APPOINTMENT"
            android:textColor="@color/white"
            android:textSize="@dimen/medium_text"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>



