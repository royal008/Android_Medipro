<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/light_gray"
        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/signup_background"
            android:orientation="vertical">
    <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:src="@drawable/left_arrow" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:textColor="@color/white"
        android:textSize="@dimen/medium_text"
        android:text="@string/user_name"/>
</LinearLayout>

        </FrameLayout>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <LinearLayout
            android:id="@+id/ll_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@color/white"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/mini_text"
                android:layout_marginLeft="@dimen/small_text"
                android:layout_marginStart="@dimen/small_text"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name"
                android:textColor="@color/dark_gray"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/mini_text"
                android:hint="@string/name"
                />
                </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/small_text"
                android:layout_marginStart="@dimen/small_text"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/small_text"
                android:layout_marginRight="@dimen/small_text"
                android:gravity="end"
                android:layout_height="wrap_content">
                <!--<ImageView-->
                    <!--android:id="@+id/iv_user_profile"-->
                    <!--android:layout_width="80dp"-->
                    <!--android:layout_height="80dp"-->
                    <!--android:src="@drawable/profile_menu"-->
                   <!--/>-->
                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/iv_user_profile"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/user_profile_pic"
                    app:civ_border_width="1dp"
                    app:civ_border_color="@color/white"/>
            </LinearLayout>
        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="0.5dp"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/contact_number"
                    android:layout_marginLeft="@dimen/small_text"
                    android:layout_marginStart="@dimen/small_text"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:hint="@string/add"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/small_text"
                    android:layout_marginRight="@dimen/small_text"
                    android:gravity="end"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="0.5dp"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/email"
                    android:layout_marginLeft="@dimen/small_text"
                    android:layout_marginStart="@dimen/small_text"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:hint="@string/add"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/small_text"
                    android:layout_marginRight="@dimen/small_text"
                    android:gravity="end"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="0.5dp"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/gender"
                    android:layout_marginLeft="@dimen/small_text"
                    android:layout_marginStart="@dimen/small_text"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:hint="@string/add"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/small_text"
                    android:layout_marginRight="@dimen/small_text"
                    android:gravity="end"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="0.5dp"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/dob"
                    android:layout_marginLeft="@dimen/small_text"
                    android:layout_marginStart="@dimen/small_text"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:hint="@string/add"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/small_text"
                    android:layout_marginRight="@dimen/small_text"
                    android:gravity="end"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="0.5dp"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/blood_group"
                    android:layout_marginLeft="@dimen/small_text"
                    android:layout_marginStart="@dimen/small_text"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:hint="@string/add"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/small_text"
                    android:layout_marginRight="@dimen/small_text"
                    android:gravity="end"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="0.5dp"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/marital_status"
                    android:layout_marginLeft="@dimen/small_text"
                    android:layout_marginStart="@dimen/small_text"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:hint="@string/add"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/small_text"
                    android:layout_marginRight="@dimen/small_text"
                    android:gravity="end"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="0.5dp"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/height"
                    android:layout_marginLeft="@dimen/small_text"
                    android:layout_marginStart="@dimen/small_text"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:hint="@string/add"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/small_text"
                    android:layout_marginRight="@dimen/small_text"
                    android:gravity="end"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="0.5dp"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/weight"
                    android:layout_marginLeft="@dimen/small_text"
                    android:layout_marginStart="@dimen/small_text"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:hint="@string/add"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/small_text"
                    android:layout_marginRight="@dimen/small_text"
                    android:gravity="end"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
