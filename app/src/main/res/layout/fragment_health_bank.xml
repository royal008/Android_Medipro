<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:background="@drawable/ad_common"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/very_small_text"
                android:src="@drawable/left_arrow" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="right">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/very_small_text"
                    android:src="@drawable/small_search" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/large_text"
            android:layout_marginTop="@dimen/medium_text"
            android:gravity="center_vertical"
            android:text="HEALTH BANK"
            android:textColor="@color/white"
            android:textSize="@dimen/xlarge_text" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/small_text"
        android:layout_weight="2"
        android:orientation="vertical"
        android:weightSum="3">

        <ImageView
            android:id="@+id/iv_stem_cell"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/smaller_text"
            android:layout_marginLeft="@dimen/small_text"
            android:layout_marginRight="@dimen/small_text"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/stem_cell" />

        <ImageView
            android:id="@+id/iv_blood_bank"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/smaller_text"
            android:layout_marginLeft="@dimen/small_text"
            android:layout_marginRight="@dimen/small_text"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/bloodbank" />

    </LinearLayout>
</LinearLayout>