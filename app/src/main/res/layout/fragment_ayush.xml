<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:background="@drawable/ad_common"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/very_small_text"
                android:src="@drawable/left_arrow" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/large_text"
            android:layout_marginTop="@dimen/medium_text"
            android:gravity="center_vertical"
            android:text="AYUSH"
            android:textColor="@color/white"
            android:textSize="@dimen/xlarge_text" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_homeopathy"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/smaller_text"
            android:layout_marginLeft="@dimen/small_text"
            android:layout_marginRight="@dimen/small_text"
            android:layout_marginTop="@dimen/small_text"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/homeopathy" />

        <ImageView
            android:id="@+id/iv_ayurvedic"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/smaller_text"
            android:layout_marginLeft="@dimen/small_text"
            android:layout_marginRight="@dimen/small_text"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/ayurvedic" />

        <ImageView
            android:id="@+id/iv_siddha"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/smaller_text"
            android:layout_marginLeft="@dimen/small_text"
            android:layout_marginRight="@dimen/small_text"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/siddha" />
    </LinearLayout>
</LinearLayout>