<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/grid_size"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_grid_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/smaller_text"
            android:contentDescription="@string/shopping"
            android:src="@drawable/shopping_fitnessequipments" />

        <TextView
            android:id="@+id/tv_menu_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/small_text"
            android:gravity="center"
            android:text="@string/fitness"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/very_small_text" />
    </LinearLayout>


</LinearLayout>